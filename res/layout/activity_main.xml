<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/discover_btn"
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:onClick="clickDiscover"
            android:text="@string/discover" />

        <Button
            android:id="@+id/stop_btn"
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:onClick="stopDiscover"
            android:text="@string/stop" />
        
    </LinearLayout>

    <TextView
        android:id="@+id/master_backends_label"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="Master Backends" />
    
    <TextView
        android:id="@+id/master_backends"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:focusable="true" />

    <TextView
        android:id="@+id/secondary_backends_label"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="Secondary Backends" />
    
    <TextView
        android:id="@+id/secondary_backends"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:focusable="true" />

    <TextView
        android:id="@+id/frontends_label"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="Frontends" />
    
    <TextView
        android:id="@+id/frontends"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:focusable="true" />

</LinearLayout>